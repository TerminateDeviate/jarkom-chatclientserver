<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="520" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Label Content="Server IP:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIp" Width="120" Text="192.168.1.100" Margin="4,0"/>
            <Label Content="Port:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPort" Width="60" Text="5000" Margin="4,0"/>
            <Label Content="Username:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Width="140" Text="alice" Margin="4,0"/>
            <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" Margin="8,0"/>
            <Button x:Name="btnDisconnect" Content="Disconnect" Click="btnDisconnect_Click" Margin="4,0" IsEnabled="False"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="lstChat" Grid.Column="0"/>
            <ListBox x:Name="lstUsers" Grid.Column="1" Margin="8,0,0,0"/>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8,0,0">
            <TextBox x:Name="txtMessage" Width="600" Height="28" KeyDown="txtMessage_KeyDown"/>
            <Button x:Name="btnSend" Content="Send" Click="btnSend_Click" Margin="8,0"/>
        </StackPanel>
    </Grid>
</Window>
