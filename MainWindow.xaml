<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="560" Width="900"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <Label Content="Server IP:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtIp" Width="140" Text="192.168.50.1" Margin="4,0"/>
            <Label Content="Port:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPort" Width="60" Text="5000" Margin="4,0"/>
            <Label Content="Username:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsername" Width="140" Text="alice" Margin="4,0"/>
            <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click" Margin="8,0" Style="{DynamicResource AccentButton}"/>
            <Button x:Name="btnDisconnect" Content="Disconnect" Click="btnDisconnect_Click" Margin="4,0" IsEnabled="False"/>
            <!-- Theme toggle -->
            <ToggleButton x:Name="btnTheme" Content="Dark" Margin="12,0,0,0" Checked="btnTheme_Checked" Unchecked="btnTheme_Unchecked"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <ListBox x:Name="lstChat" Height="400" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}"/>
                <Label x:Name="lblTyping" Content="" HorizontalAlignment="Left" Foreground="{DynamicResource MutedBrush}" Margin="4,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                <TextBlock Text="Online users" FontWeight="Bold" Margin="2" Foreground="{DynamicResource ForegroundBrush}"/>
                <ListBox x:Name="lstUsers" Height="460" MouseDoubleClick="lstUsers_MouseDoubleClick" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8,0,0">
            <TextBox x:Name="txtMessage" Width="700" Height="28" KeyDown="txtMessage_KeyDown" TextChanged="txtMessage_TextChanged" Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}"/>
            <Button x:Name="btnSend" Content="Send" Click="btnSend_Click" Margin="8,0" IsEnabled="False" Style="{DynamicResource AccentButton}"/>
        </StackPanel>
    </Grid>
</Window>
