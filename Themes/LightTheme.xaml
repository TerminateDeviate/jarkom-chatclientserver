<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Brushes -->
  <Color x:Key="WindowBackgroundColor">#FFF7F7F8</Color>
  <Color x:Key="PanelBackgroundColor">#FFFFFFFF</Color>
  <Color x:Key="ForegroundColor">#FF222222</Color>
  <Color x:Key="AccentColor">#FF1E90FF</Color>
  <Color x:Key="MutedColor">#FF6B7280</Color>

  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
  <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
  <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
  <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedColor}"/>

  <!-- Controls -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
  </Style>

  <Style TargetType="ListBox">
    <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}" />
  </Style>

  <Style x:Key="AccentButton" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

</ResourceDictionary>
