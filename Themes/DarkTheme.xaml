<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Color x:Key="WindowBgColor">#FF1E1E1E</Color>
  <Color x:Key="TextColor">#FFF0F0F0</Color>

  <SolidColorBrush x:Key="WindowBgBrush" Color="{StaticResource WindowBgColor}" />
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource WindowBgBrush}" />
    <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
  </Style>

  <Style TargetType="ListBox">
    <Setter Property="Background" Value="#FF2A2A2A" />
    <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Background" Value="#FF333333"/>
    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
  </Style>
</ResourceDictionary>
